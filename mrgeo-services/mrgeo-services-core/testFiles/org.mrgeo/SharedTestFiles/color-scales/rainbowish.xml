<ColorMap name="Rainbow-ish">
  <Scaling>MinMax</Scaling> <!-- Could also be Absolute -->
  <!-- null values will be transparent -->
  <NullColor color="0,0,0" opacity="0"/>
  <!-- if opacity is not specified it defaults to 255 -->
  <!-- red -->
  <Color value="0.0" color="255,0,0"/>
  <!-- yellow -->
  <Color value="0.2" color="255,255,0"/> 
  <!-- green -->
  <Color value="0.4" color="0,255,0"/>
  <!-- cyan -->
  <Color value="0.6" color="0,255,255"/>
  <!-- blue -->
  <Color value="0.8" color="0,0,255"/>
  <!-- white -->
  <Color value="1.0" color="255,255,255"/>
</ColorMap>